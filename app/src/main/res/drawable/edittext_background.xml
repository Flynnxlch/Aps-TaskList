<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Focused: coral outline tipis -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#EDF4F8" />       <!-- biru-abu muda -->
            <stroke
                android:width="1dp"
                android:color="#FF5722" />         <!-- coral -->
            <corners android:radius="12dp" />
            <padding
                android:left="20dp"
                android:top="14dp"
                android:right="20dp"
                android:bottom="14dp" />
        </shape>
    </item>

    <!-- Normal: abu-abu outline sangat tipis -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#EDF4F8" />
            <stroke
                android:width="1dp"
                android:color="#888F99" />
            <corners android:radius="12dp" />
            <padding
                android:left="20dp"
                android:top="14dp"
                android:right="20dp"
                android:bottom="14dp" />
        </shape>
    </item>
</selector>
